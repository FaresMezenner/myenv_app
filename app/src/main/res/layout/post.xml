<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="20dp"
    android:padding="20dp"
    android:layout_margin="10dp"
    android:outlineSpotShadowColor="#02A046"
    android:outlineAmbientShadowColor="#02A046">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_pfp_view"
            android:text="User"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:layout_toRightOf="@id/user_pfp_view"
            android:text="Rank"></TextView>

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rank"
            android:layout_toRightOf="@id/user_pfp_view"
            android:text="Completion Rate"></TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/user_pfp_view"
            app:cardCornerRadius="50dp"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_pfp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:src="@drawable/user"></ImageView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:id="@+id/post_pic_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_pfp_view"
            android:layout_margin="10dp"
            >

            <ImageView
                android:id="@+id/post_pic"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/user_pfp_view"
                android:scaleType="centerCrop"
                android:src="@drawable/trash"></ImageView></androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/online"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@id/post_pic_view"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/online"></ImageView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_pic_view"
            android:layout_marginRight="10dp"
            android:paddingLeft="3dp"
            android:layout_toRightOf="@id/online"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="30sp"></TextView>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="10dp"
            android:text="Description"
            android:textSize="20sp"></TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>